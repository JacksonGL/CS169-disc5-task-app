<h1> Hello peeps :)</h1>

<%= form_for @task do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    
    <%= f.submit %>
<% end %>

<h2> Non-completed tasks </h2>
<ul id="non_completed_tasks">
<% @noncompleted_tasks.each do |task| %>
    <li> <%= link_to "#{task.description}", edit_task_path(task) %>
<% end %>    
</ul>

<h2> Completed tasks </h2>
<ul id="completed_tasks">
<% @completed_tasks.each do |task| %>
    <li> <%= link_to "#{task.description}", edit_task_path(task) %>
<% end %>    
</ul>